<div>
  <br>
  <h1> Create your PetPal profile </h1>
    <br>
    <% if flash[:user_errors] %>  
      <% flash[:user_errors].each do |error| %>
        <p><%= error %></p>
      <%end%>
    <%end%>
    <%= form_for @user do |f| %>
        <%= f.label :name, "Username" %>
        <%= f.text_field :name %> <br>
        <%= f.label :age %>
        <%= f.number_field :age %><br>
        <%= f.label :email %>
        <%= f.email_field :email %><br>
        <%= f.label :password %>
        <%= f.password_field :password %><br>
        <%= f.submit %>
    <% end %>
    <br>
  <p> <%= link_to "Click here to browse without an account", pets_path, :style => "color: #7400bc;"  %> </p>
</div>
