
<br><br>

<%= image_tag ("#{@pet.img_url}") %>

<h1>Meet <%= @pet.name %>!</h1>
    <p> <%= @pet.animal %> ||  <%= @pet.breed %> </p> 

<% if @current_user == nil %>
    <p><%= link_to "Sign up", new_user_path %> or <%= link_to "Log In", new_login_path%> to add your new Petpal to your very own WatchList! </p>
<% end %>

<% if @current_user%>
    <% @current_user.watch_lists.each do |list| %>
        <% if @pet.id == list.pet_id %>
            <p> You've already added this cutie to your WatchList! <br>
            <%= link_to "Go to your Watchlist", user_path(@pet.users.ids) %></p>
        <%end%>
    <% end %>  
        <% if @current_user.watch_lists.exists?(pet_id: @pet.id) == false %>
            <%= button_to "Add to Watchlist", pet_capture_path, method: :post %>    
        <%end%>
<%end%>
 
<p><%= @pet.likes %> likes </p> <%= button_to "❤️", pet_like_path(@pet), method: :put %> 

<h3> About Me </h3>
    <p>
        <%= @pet.description %><br><br>
        Age: <%= @pet.age %> <br>
        Gender: <%= @pet.gender %><br>
        Size: <%= @pet.size %><br>
        Located: <%= @pet.city %>, <%= @pet.state %><br>
    </p> 

<h3> Adopt Me </h3>
    <p>
        Contact: <%= mail_to @pet.contact_email, @pet.contact_email %>
    </p>

<%= video_tag("#{@pet.video_url}") %>
 
<p> <%= link_to "Back to list of other pets", pets_path %> </p>

