<h2> Search by Animal: </h2>
<p> Type in dog, cat, bird...</p>

<%= form_tag(pets_path, method: :get) do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag 'Search', :name => nil %>
<% end %>

<%= form_tag(pets_path, method: :get) do %>
    <%= label_tag "State" %>
    <%= select_tag "State", options_from_collection_for_select(@pets, "id", "state") %>
    <%= submit_tag 'Search', :name => nil %>
<%end%>

<% if @pets.blank? %>
  <h4>There are no searches containing the term <%= params[:search] %>.</h4>
<% end %>

<% if @pets.present? && @current_user == nil %>
  <h2> Pick a New Pal! </h2>
  <% @pets.each do |pet| %>
        <%= link_to image_tag("#{pet.img_url}"), "#{pet_path(pet)}" %>
    <%end%>  
  <%end%>



  <%if @current_user%>
 <h3> Your Current Petpals </h3>  
      <% @pets.each do |pet| %>
      <% @current_user.watch_lists.each do |list| %>
        <% if list.pet_id == pet.id %>
      <%= link_to image_tag("#{pet.img_url}"), "#{pet_path(pet)}" %>
  <%end%>
  <%end%>
  <%end%>
<%end%>

<% array = [] %>
  <% if @current_user %>
  <h3> Browse through our other Pets </h3>
    <% @pets.each do |pet| %>
      <% @current_user.watch_lists.each do |list| %>
        <% if list.pet_id == pet.id %>
          <% array << list.pet %>
        <%end%>
      <%end%>
    <%end%>
    <% current_array = @pets - array %>
    <% current_array.each do |pet| %>
    <%= link_to image_tag("#{pet.img_url}"), "#{pet_path(pet)}" %>
    <%end%>
<%end%>