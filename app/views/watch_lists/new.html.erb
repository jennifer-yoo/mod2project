<h1>Adding your pal to your Watch List... </h1>

<%= form_for @watch_list do |f| %>
<br>
<%= f.label :user_id, "Your username:"%>
<br>
<%= f.collection_select :user_id, @users, :id, :name %>
<br>
<%= f.label :pet_id, "What's the name of the pet you would like to add?" %>
<br>
<%= f.collection_select :pet_id, @pets, :id, :name %>
<br>
<%= f.label 'Make a note' %>
<br>
<%= f.text_area :note %>
<br>
<%= f.submit 'Submit' %>        
<% end %>
  